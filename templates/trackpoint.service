[Unit]
Description=Trackpoint Configuration
## Only using "sensitivity" file as also using "speed" and "press" would be redundant and messy
ConditionPathExists=|/sys/devices/platform/i8042/serio1/serio2/sensitivity
ConditionPathExists=|/sys/devices/platform/i8042/serio1/sensitivity

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/trackpoint.sh

[Install]
WantedBy=graphical.target
